
<h1>Create a new task</h1>
<form>
	<div class="form-group">
	<%= form_for(@task) do |f| %>
	  <%= f.label :title %>
	  <%= f.text_field :title,class:"form-control"%>
	  <%= f.label :details %>
	  <%= f.text_area :details, class:"form-control" %>
	  <%= f.submit class:"btn btn-primary" %>
	<% end %>
	</div>
</form>

<h4 class="mt-3"><%= link_to "back to list", tasks_path %></h4>

